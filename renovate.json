{
  "extends": [
    "config:js-app",
    //"github>finn-no/renovate-presets:js",
    ":automergeDigest",
    ":automergeMajor",
    ":automergeRequireAllStatusChecks",
    ":prHourlyLimit4",
    ":semanticCommits",
    ":pinDigestsDisabled"
  ],
  "packageRules": [
    {
      "groupName": "scroll-into-view",
      "packagePatterns": ["scroll-into-view"]
    },
    {
      "groupName": "popmotion",
      "packageNames": ["popmotion", "stylefire"]
    },
    {
      "depTypeList": ["devDependencies"],
      "schedule": ["before 4am on sunday"],
      "commitMessage": "Dev dependency {{depName}} updated to version {{newValue}}",
      "prTitle": "Dev dependency update: {{depName}}",
      
    }
  ],
}
