{
  "extends": [
    "config:js-app",
    ":automergeDigest",
    ":automergeMajor",
    ":automergeRequireAllStatusChecks",
    ":prHourlyLimit4",
    ":semanticCommits",
    ":pinDigestsDisabled"
  ],
  "packageRules": [
    {
      "groupName": "scroll-into-view",
      "packagePatterns": ["scroll-into-view"]
    },
    {
      "groupName": "popmotion",
      "packageNames": ["popmotion", "stylefire"]
    },
    {
      "depTypeList": ["devDependencies"],
      "schedule": ["before 4am on sunday"],
      "commitMessageTopic": "Dev dependency {{depName}}"
    }
  ],
}
