{
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "deploy": "next build && next export",
    "dev": "next",
    "test": "cypress run --browser chrome --reporter junit --reporter-options 'mochaFile=junit/test-results.xml'"
  },
  "dependencies": {
    "@types/next": "6.0.2",
    "@types/node": "9.6.18",
    "@types/prettier": "1.13.1",
    "@types/react": "16.4.1",
    "@types/react-dom": "16.0.6",
    "@zeit/next-typescript": "0.1.1",
    "babel-plugin-styled-components": "1.5.1",
    "bulma": "0.7.1",
    "codemirror": "5.39.0",
    "fork-ts-checker-webpack-plugin": "0.4.2",
    "next": "6.0.3",
    "popmotion": "8.2.5",
    "prettier": "1.13.5",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-refractor": "1.0.1",
    "refractor": "2.4.1",
    "scroll-into-view-if-needed": "2.2.6",
    "smooth-scroll-into-view-if-needed": "1.1.7",
    "styled-components": "3.3.3",
    "system-font-stack": "1.0.5",
    "typescript": "2.9.2"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "2.0.1",
    "babel-eslint": "8.2.4",
    "cypress": "3.0.1",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-react": "7.9.1",
    "husky": "0.14.3",
    "lerna": "2.11.0",
    "lint-staged": "7.2.0",
    "prettier-package-json": "1.6.0",
    "tsify": "4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "**/package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "**/.babelrc": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": ".babelrc",
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "resolutions": {
    "@types/react": "16.4.1"
  }
}
