{
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "dev": "gatsby develop",
    "lint": "yarn lynt:js && yarn lynt:ts",
    "lynt": "lynt --ignore out --ignore public",
    "lynt:js": "yarn lynt --env mocha --global cy",
    "lynt:ts": "yarn lynt --typescript --react",
    "prestart": "gatsby build",
    "start": "gatsby serve -p 8000",
    "test": "cypress run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/node": "10.12.24",
    "@types/prettier": "1.19.0",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5",
    "babel-plugin-styled-components": "1.10.6",
    "bulma": "0.8.0",
    "compute-scroll-into-view": "1.0.13",
    "gatsby": "2.19.5",
    "gatsby-plugin-netlify": "2.1.31",
    "gatsby-plugin-react-helmet": "3.1.21",
    "gatsby-plugin-styled-components": "3.1.18",
    "gatsby-plugin-typescript": "2.1.26",
    "popmotion": "8.7.1",
    "prettier": "1.19.1",
    "prop-types": "15.7.2",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-helmet": "5.2.1",
    "react-refractor": "1.0.1",
    "refractor": "2.10.1",
    "scroll-into-view-if-needed": "2.2.24",
    "smooth-scroll-into-view-if-needed": "1.1.27",
    "styled-components": "4.4.1",
    "stylefire": "7.0.2",
    "system-font-stack": "1.0.5",
    "typescript": "3.7.5"
  },
  "devDependencies": {
    "cypress": "3.8.2",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "lynt": "0.5.5",
    "prettier-package-json": "2.1.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "**/package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "**/.babelrc": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": ".babelrc",
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "resolutions": {
    "@types/react": "16.9.19",
    "prop-types": "15.7.2"
  }
}
