{
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "deploy": "next build && next export",
    "dev": "gatsby develop",
    "lint": "yarn lynt:js && yarn lynt:ts",
    "lynt": "lynt --ignore out --ignore public",
    "lynt:js": "yarn lynt --env mocha --global cy",
    "lynt:ts": "yarn lynt --typescript --react",
    "prestart": "next build",
    "start": "next start",
    "test": "cypress run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/next": "6.0.4",
    "@types/node": "10.5.2",
    "@types/prettier": "1.13.1",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "@zeit/next-typescript": "1.1.0",
    "babel-plugin-styled-components": "1.5.1",
    "bulma": "0.7.1",
    "compute-scroll-into-view": "1.0.2",
    "gatsby": "2.0.0-beta.26",
    "gatsby-plugin-typescript": "^2.0.0-beta.5",
    "next": "6.1.1",
    "popmotion": "8.3.3",
    "prettier": "1.13.7",
    "prop-types": "15.6.2",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-refractor": "1.0.1",
    "refractor": "2.4.1",
    "scroll-into-view-if-needed": "2.2.11",
    "smooth-scroll-into-view-if-needed": "1.1.12",
    "styled-components": "3.3.3",
    "stylefire": "2.0.6",
    "system-font-stack": "1.0.5",
    "typescript": "2.9.2"
  },
  "devDependencies": {
    "cypress": "3.0.2",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "lynt": "0.4.0",
    "prettier-package-json": "1.6.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "**/package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "**/.babelrc": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": ".babelrc",
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "resolutions": {
    "@types/react": "16.4.6",
    "prop-types": "15.6.2"
  }
}
