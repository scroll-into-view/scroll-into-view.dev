{
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "dev": "gatsby develop",
    "lint": "yarn lynt:js && yarn lynt:ts",
    "lynt": "lynt --ignore out --ignore public",
    "lynt:js": "yarn lynt --env mocha --global cy",
    "lynt:ts": "yarn lynt --typescript --react",
    "prestart": "gatsby build",
    "start": "gatsby serve -p 8000",
    "test": "cypress run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/node": "10.11.1",
    "@types/prettier": "1.13.2",
    "@types/react": "16.4.14",
    "@types/react-dom": "16.0.8",
    "babel-plugin-styled-components": "1.7.1",
    "bulma": "0.7.1",
    "compute-scroll-into-view": "1.0.8",
    "gatsby": "2.0.11",
    "gatsby-plugin-netlify": "2.0.0",
    "gatsby-plugin-react-helmet": "3.0.0",
    "gatsby-plugin-styled-components": "3.0.0",
    "gatsby-plugin-typescript": "2.0.0",
    "popmotion": "8.3.8",
    "prettier": "1.14.3",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-helmet": "5.2.0",
    "react-refractor": "1.0.1",
    "refractor": "2.6.0",
    "scroll-into-view-if-needed": "2.2.16",
    "smooth-scroll-into-view-if-needed": "1.1.19",
    "styled-components": "3.3.3",
    "stylefire": "2.0.7",
    "system-font-stack": "1.0.5",
    "typescript": "3.0.3"
  },
  "devDependencies": {
    "cypress": "3.1.0",
    "husky": "1.0.1",
    "lint-staged": "7.3.0",
    "lynt": "0.5.3",
    "prettier-package-json": "2.0.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "**/package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "**/.babelrc": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": ".babelrc",
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "resolutions": {
    "@types/react": "16.4.14",
    "prop-types": "15.6.2"
  }
}
